<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodItemsSelector">

    <Button
            android:text="Rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRice"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnApple" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <Button
            android:text="Chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChicken"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBanana"/>
    <Button
            android:text="Banana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBanana"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCeleri"/>
    <Button
            android:text="Apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnApple"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHamburg" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <Button
            android:text="Ham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHam"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <Button
            android:text="Brocoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBrocoli"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <Button
            android:text="Celeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCeleri"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHam"/>
    <Button
            android:text="Hamburg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHamburg"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBrocoli" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <Button
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel" android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>